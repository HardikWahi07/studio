/**
 * @fileoverview Firestore Security Rules for TripMind application.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model for user-related data (profiles, trips, expenses, itinerary items),
 * while allowing public read access to local business and supporter data. Bookings are restricted to the involved user or supporter.
 *
 * Data Structure:
 * - /users/{userId}: User profile data. Only the user can access their own profile.
 * - /users/{userId}/trips/{tripId}: Trip data. Only the owning user can manage their trips.
 * - /users/{userId}/trips/{tripId}/expenses/{expenseId}: Expenses for a trip. Only the owning user can manage expenses.
 * - /users/{userId}/trips/{tripId}/itinerary_items/{itineraryItemId}: Itinerary items for a trip. Only the owning user can manage itinerary items.
 * - /local_businesses/{localBusinessId}: Publicly readable data about local businesses.
 * - /app-stats/{statId}: Publicly readable application statistics.
 * - /supporters/{supporterId}: Publicly readable profiles of local supporters.
 * - /bookings/{bookingId}: Bookings between users and supporters. Only the involved user or supporter can read a specific booking.
 *   Users can list only their own bookings.
 *
 * Key Security Decisions:
 * - User listing is explicitly denied.
 * - Local business and supporter data are publicly readable.
 * - App statistics are publicly readable.
 * - All write operations on user-owned data require authentication and ownership validation.
 * - The 'bookings' collection uses query-based security for `list` operations to prevent unauthorized data access.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Secure access to user profile data. Only the user can read/write their own data.
     * @path /users/{userId}
     * @allow (create, update, delete, get, list): User 'cZ0nh1OUjCSw4JAPyqUWCMUqyIA3' can create/update/delete/get their own profile document.
     * @deny (create, update, delete, get, list): User 'anotherUserId' cannot create/update/delete/get user profile document for 'cZ0nh1OUjCSw4JAPyqUWCMUqyIA3'.
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource.data != null;
      }

      allow get: if isSignedIn() && isOwner(userId);
      allow list: if false; // Listing users is not permitted.
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isExistingOwner(userId);
      allow delete: if isSignedIn() && isExistingOwner(userId);
    }

    /**
     * @description Secure access to trip data associated with a user. Only the user can manage their trips.
     * @path /users/{userId}/trips/{tripId}
     * @allow (create, update, delete, get, list): User 'cZ0nh1OUjCSw4JAPyqUWCMUqyIA3' can create/update/delete/get their own trip documents.
     * @deny (create, update, delete, get, list): User 'anotherUserId' cannot create/update/delete/get trip documents for user 'cZ0nh1OUjCSw4JAPyqUWCMUqyIA3'.
     * @principle Enforces document ownership for writes and path consistency.
     */
    match /users/{userId}/trips/{tripId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource.data != null;
      }
      allow get: if isSignedIn() && isOwner(userId);
      allow list: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isExistingOwner(userId);
      allow delete: if isSignedIn() && isExistingOwner(userId);
    }

    /**
     * @description Secure access to expense data associated with a trip and user. Only the user can manage expenses.
     * @path /users/{userId}/trips/{tripId}/expenses/{expenseId}
     * @allow (create, update, delete, get, list): User 'cZ0nh1OUjCSw4JAPyqUWCMUqyIA3' can create/update/delete/get their own expense documents.
     * @deny (create, update, delete, get, list): User 'anotherUserId' cannot create/update/delete/get expense documents for user 'cZ0nh1OUjCSw4JAPyqUWCMUqyIA3'.
     * @principle Enforces document ownership for writes and path consistency.
     */
    match /users/{userId}/trips/{tripId}/expenses/{expenseId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource.data != null;
      }
      allow get: if isSignedIn() && isOwner(userId);
      allow list: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isExistingOwner(userId);
      allow delete: if isSignedIn() && isExistingOwner(userId);
    }

    /**
     * @description Secure access to itinerary items associated with a trip. Only the user can manage itinerary items.
     * @path /users/{userId}/trips/{tripId}/itinerary_items/{itineraryItemId}
     * @allow (create, update, delete, get, list): User 'cZ0nh1OUjCSw4JAPyqUWCMUqyIA3' can create/update/delete/get their own itinerary item documents.
     * @deny (create, update, delete, get, list): User 'anotherUserId' cannot create/update/delete/get itinerary item documents for user 'cZ0nh1OUjCSw4JAPyqUWCMUqyIA3'.
     * @principle Enforces document ownership for writes and path consistency.
     */
    match /users/{userId}/trips/{tripId}/itinerary_items/{itineraryItemId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource.data != null;
      }
      allow get: if isSignedIn() && isOwner(userId);
      allow list: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isExistingOwner(userId);
      allow delete: if isSignedIn() && isExistingOwner(userId);
    }

    /**
     * @description Allows public read access to local business data.
     * @path /local_businesses/{localBusinessId}
     * @allow (get, list): Any user can read local business data.
     * @deny (create, update, delete): No user can create, update, or delete local business data without specific authorization.
     * @principle Allows public read access.
     */
    match /local_businesses/{localBusinessId} {
      allow get, list: if true;
      allow create, update, delete: if false; // TODO: Add owner validation once the schema is updated with an ownership field.
    }

    /**
     * @description Allows public read access to application statistics.
     * @path /app-stats/{statId}
     * @allow (get, list): Any user can read application statistics.
     * @deny (create, update, delete): No user can create, update, or delete application statistics without specific authorization.
     * @principle Allows public read access.
     */
    match /app-stats/{statId} {
      allow get, list: if true;
      allow create, update, delete: if false; // TODO: Add owner validation once the schema is updated with an ownership field.
    }

    /**
     * @description Allows public read access to local supporter profiles.
     * @path /supporters/{supporterId}
     * @allow (get, list): Any user can read local supporter data.
     * @deny (create, update, delete): No user can create, update, or delete local supporter data without specific authorization.
     * @principle Allows public read access.
     */
    match /supporters/{supporterId} {
      allow get, list: if true;
      allow create, update, delete: if false; // TODO: Add owner validation once the schema is updated with an ownership field.
    }

    /**
     * @description Manages access to booking data. Allows reads for involved parties and secure, user-specific queries for lists.
     * @path /bookings/{bookingId}
     * @allow (get): User 'cZ0nh1OUjCSw4JAPyqUWCMUqyIA3' can read booking data if they are the user or supporter involved in the booking.
     * @allow (list): User 'cZ0nh1OUjCSw4JAPyqUWCMUqyIA3' can list bookings when querying for their own userId.
     * @deny (create): User 'anotherUserId' cannot create booking data for user 'cZ0nh1OUjCSw4JAPyqUWCMUqyIA3'.
     * @principle Enforces document ownership and restricted list access.
     */
    match /bookings/{bookingId} {
      function isSignedIn() {
        return request.auth != null;
      }
        
      allow get: if isSignedIn() && (resource.data.userId == request.auth.uid || resource.data.supporterId == request.auth.uid);
      allow list: if isSignedIn() && request.query.data.userId == request.auth.uid;
      allow create: if isSignedIn() && request.auth.uid == request.resource.data.userId;
      allow update: if isSignedIn() && (request.auth.uid == resource.data.userId || request.auth.uid == resource.data.supporterId); // Only the system can update this, or creator.
      allow delete: if false; // Creator/system only.
    }
  }
}