/**
 * @fileOverview Firestore Security Rules for TripMind.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model for personal data (users, trips, expenses, itinerary items)
 * and provides public read access to shared data (local businesses, app stats, supporters).
 * It uses path-based authorization to ensure that users can only access their own data.
 *
 * Data Structure:
 * - /users/{userId}: Stores user profiles and related data. Only the user can read/write their own profile.
 * - /users/{userId}/trips/{tripId}: Stores trip data. Only the user can manage their trips.
 * - /users/{userId}/trips/{tripId}/expenses/{expenseId}: Stores expense data. Only the user can manage expenses for their trips.
 * - /users/{userId}/trips/{tripId}/itinerary_items/{itineraryItemId}: Stores itinerary items. Only the user can manage itinerary items for their trips.
 * - /local_businesses/{businessId}: Stores data for local businesses. Publicly readable, write-protected.
 * - /app-stats/{statId}: Stores global application statistics. Publicly readable, write-protected.
 * - /supporters/{supporterId}: Stores profiles of local supporters. Publicly readable, write-protected.
 * - /bookings/{bookingId}: Stores confirmed bookings.
 *
 * Key Security Decisions:
 * - User listing is disabled to protect privacy.
 * - Public collections (local_businesses, app-stats, supporters) are read-only.
 * - Bookings can be listed with a query that explicitly filters for the user's own userId.
 *
 * Denormalization for Authorization:
 * The 'Expense' and 'ItineraryItem' entities now have a 'userId' field. This allows for simpler security rules
 * that directly check the 'userId' field instead of needing to traverse up the data hierarchy.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /** ðŸ” Utility: Check if user is signed in */
    function isSignedIn() {
      return request.auth != null;
    }

    /** ðŸ‘¤ Utility: Check if user owns the resource */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * @description Enforces that the current user is the owner of the document, and that the document exists before deleting or updating.
     * @param {string} userId - The user ID to check against the document's owner.
     * @returns {boolean} True if the user is the owner and the document exists, false otherwise.
     * @example
     *  allow delete: if isExistingOwner(userId);
     */
    function isExistingOwner(userId) {
      return isOwner(userId);
    }


    /** ---------------------------------------------------------------------
     *  ðŸ‘¥ USERS COLLECTION
     *  ---------------------------------------------------------------------
     *  Each user can only manage their own profile.
     *  Listing all users is disabled to protect privacy.
     *
     * @path /users/{userId}
     * @allow (get, create, update, delete) if authenticated user's ID matches the {userId} path parameter.
     * @deny (get, create, update, delete) if authenticated user's ID does not match the {userId} path parameter.
     * @deny list: Listing all users is not permitted.
     * @principle Enforces document ownership for reads and writes.
     */
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /** ---------------------------------------------------------------------
     *  ðŸ—ºï¸ TRIPS COLLECTION
     *  ---------------------------------------------------------------------
     *  Each user can only access trips under their own profile.
     *
     * @path /users/{userId}/trips/{tripId}
     * @allow (get, list, create, update, delete) if the authenticated user's ID matches the {userId} path parameter.
     * @deny (get, list, create, update, delete) if the authenticated user's ID does not match the {userId} path parameter.
     * @principle Restricts access to a user's own data tree.
     */
    match /users/{userId}/trips/{tripId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /** ---------------------------------------------------------------------
     *  ðŸ’° EXPENSES COLLECTION
     *  ---------------------------------------------------------------------
     *  Only the owner of the trip can manage expenses under it.
     *
     * @path /users/{userId}/trips/{tripId}/expenses/{expenseId}
     * @allow (get, list, create, update, delete) if the authenticated user's ID matches the {userId} path parameter.
     * @deny (get, list, create, update, delete) if the authenticated user's ID does not match the {userId} path parameter.
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId}/trips/{tripId}/expenses/{expenseId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /** ---------------------------------------------------------------------
     *  ðŸ§­ ITINERARY ITEMS COLLECTION
     *  ---------------------------------------------------------------------
     *  Only the owner of the trip can manage itinerary items under it.
     *
     * @path /users/{userId}/trips/{tripId}/itinerary_items/{itineraryItemId}
     * @allow (get, list, create, update, delete) if the authenticated user's ID matches the {userId} path parameter.
     * @deny (get, list, create, update, delete) if the authenticated user's ID does not match the {userId} path parameter.
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId}/trips/{tripId}/itinerary_items/{itineraryItemId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /** ---------------------------------------------------------------------
     *  ðŸª LOCAL BUSINESSES COLLECTION
     *  ---------------------------------------------------------------------
     *  Publicly readable, write-protected.
     *
     * @path /local_businesses/{businessId}
     * @allow get, list: Any user can read and list local businesses.
     * @deny create, update, delete: No user can create, update, or delete local businesses.
     * @principle Allows public reads and restricts writes.
     */
    match /local_businesses/{businessId} {
      allow get: if true;
      allow list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /** ---------------------------------------------------------------------
     *  ðŸ“Š APP STATS COLLECTION
     *  ---------------------------------------------------------------------
     *  Publicly readable, write-protected.
     *
     * @path /app-stats/{statId}
     * @allow get, list: Any user can read and list app stats.
     * @deny create, update, delete: No user can create, update, or delete app stats.
     * @principle Allows public reads and restricts writes.
     */
    match /app-stats/{statId} {
      allow get: if true;
      allow list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /** ---------------------------------------------------------------------
     *  ðŸ¤ SUPPORTERS COLLECTION
     *  ---------------------------------------------------------------------
     *  Publicly readable, write-protected.
     *
     * @path /supporters/{supporterId}
     * @allow get, list: Any user can read and list supporters.
     * @deny create, update, delete: No user can create, update, or delete supporters.
     * @principle Allows public reads and restricts writes.
     */
    match /supporters/{supporterId} {
      allow get: if true;
      allow list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /** ---------------------------------------------------------------------
     *  ðŸ§¾ BOOKINGS COLLECTION
     *  ---------------------------------------------------------------------
     *  For hackathon demo: allow authenticated users to read, list, and create bookings.
     *  In production, restrict list to user-specific queries.
     */
    match /bookings/{bookingId} {
       /**
        * @description Allows signed-in users to read individual bookings if they are the user or supporter involved. Allows listing of bookings for a user, and creation of new bookings. Updates and deletes are forbidden.
        * @path /bookings/{bookingId}
        * @allow get: If the request is made by the user associated with the booking or the supporter associated with the booking.
        * @allow list: If the request is to list bookings for a specific user.
        * @allow create: If the request is to create a booking for a specific user.
        * @deny update, delete: Updates and deletes are never allowed.
        * @principle Enforces role-based access control for reads and writes.
        */
      allow get: if isSignedIn() && (resource.data.userId == request.auth.uid || resource.data.supporterId == request.auth.uid);
      allow list: if isSignedIn() && request.query.where("userId", "==", request.auth.uid).size() > 0;
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update: if false;
      allow delete: if false;
    }
  }
}