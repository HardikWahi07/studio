/**
 * @fileoverview Firestore Security Rules for TripMind application.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model for user-generated content (trips, expenses, itinerary items) nested under /users/{userId}.
 * Global application statistics and local supporter profiles are publicly readable.
 *
 * Data Structure:
 * - /users/{userId}: User profiles. Owner-only access.
 * - /users/{userId}/trips/{tripId}: Trips belonging to a user. Owner-only access.
 * - /users/{userId}/trips/{tripId}/expenses/{expenseId}: Expenses for a trip. Owner-only access.
 * - /users/{userId}/trips/{tripId}/itinerary_items/{itineraryItemId}: Itinerary items for a trip. Owner-only access.
 * - /local_businesses/{localBusinessId}: Local business information. Publicly readable, but no write rules are defined for the prototype.
 * - /app-stats/{statId}: Global application statistics. Publicly readable.
 * - /supporters/{supporterId}: Local supporter profiles. Publicly readable.
 *
 * Key Security Decisions:
 * - No user listing is allowed.
 * - Public read access is granted only to /app-stats and /supporters.
 * - All write operations require a valid authenticated user.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Enforces owner-only access to user profiles.
     * @path /users/{userId}
     * @allow (create) User 'cZ0nh1OUjCSw4JAPyqUWCMUqyIA3' can create their profile.
     * @deny (create) User 'cZ0nh1OUjCSw4JAPyqUWCMUqyIA3' cannot create a profile for another user ('otherUserId').
     * @allow (get) User 'cZ0nh1OUjCSw4JAPyqUWCMUqyIA3' can read their own profile.
     * @deny (get) User 'cZ0nh1OUjCSw4JAPyqUWCMUqyIA3' cannot read another user's profile.
     * @allow (update) User 'cZ0nh1OUjCSw4JAPyqUWCMUqyIA3' can update their own profile.
     * @deny (update) User 'cZ0nh1OUjCSw4JAPyqUWCMUqyIA3' cannot update another user's profile.
     * @allow (delete) User 'cZ0nh1OUjCSw4JAPyqUWCMUqyIA3' can delete their own profile.
     * @deny (delete) User 'cZ0nh1OUjCSw4JAPyqUWCMUqyIA3' cannot delete another user's profile.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return isSignedIn() && request.auth.uid == userId;
      }
        function isExistingOwner(userId) {
          return isOwner(userId) && resource != null;
        }

      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow get: if isOwner(userId);
      allow list: if false; // No listing of users allowed.
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Enforces owner-only access to trips within a user's profile.
     * @path /users/{userId}/trips/{tripId}
     * @allow (create) User 'cZ0nh1OUjCSw4JAPyqUWCMUqyIA3' can create a trip under their profile.
     * @deny (create) User 'cZ0nh1OUjCSw4JAPyqUWCMUqyIA3' cannot create a trip under another user's profile.
     * @allow (get) User 'cZ0nh1OUjCSw4JAPyqUWCMUqyIA3' can read a trip under their profile.
     * @deny (get) User 'cZ0nh1OUjCSw4JAPyqUWCMUqyIA3' cannot read a trip under another user's profile.
     * @allow (update) User 'cZ0nh1OUjCSw4JAPyqUWCMUqyIA3' can update a trip under their profile.
     * @deny (update) User 'cZ0nh1OUjCSw4JAPyqUWCMUqyIA3' cannot update a trip under another user's profile.
     * @allow (delete) User 'cZ0nh1OUjCSw4JAPyqUWCMUqyIA3' can delete a trip under their profile.
     * @deny (delete) User 'cZ0nh1OUjCSw4JAPyqUWCMUqyIA3' cannot delete a trip under another user's profile.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/trips/{tripId} {
        function isSignedIn() {
          return request.auth != null;
        }

        function isOwner(userId) {
          return isSignedIn() && request.auth.uid == userId;
        }
        function isExistingOwner(userId) {
          return isOwner(userId) && resource != null;
        }
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Enforces owner-only access to expenses within a user's trip.
     * @path /users/{userId}/trips/{tripId}/expenses/{expenseId}
     * @allow (create) User 'cZ0nh1OUjCSw4JAPyqUWCMUqyIA3' can create an expense under their trip.
     * @deny (create) User 'cZ0nh1OUjCSw4JAPyqUWCMUqyIA3' cannot create an expense under another user's trip.
     * @allow (get) User 'cZ0nh1OUjCSw4JAPyqUWCMUqyIA3' can read an expense under their trip.
     * @deny (get) User 'cZ0nh1OUjCSw4JAPyqUWCMUqyIA3' cannot read an expense under another user's trip.
     * @allow (update) User 'cZ0nh1OUjCSw4JAPyqUWCMUqyIA3' can update an expense under their trip.
     * @deny (update) User 'cZ0nh1OUjCSw4JAPyqUWCMUqyIA3' cannot update an expense under another user's trip.
     * @allow (delete) User 'cZ0nh1OUjCSw4JAPyqUWCMUqyIA3' can delete an expense under their trip.
     * @deny (delete) User 'cZ0nh1OUjCSw4JAPyqUWCMUqyIA3' cannot delete an expense under another user's trip.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/trips/{tripId}/expenses/{expenseId} {
        function isSignedIn() {
          return request.auth != null;
        }

        function isOwner(userId) {
          return isSignedIn() && request.auth.uid == userId;
        }
            function isExistingOwner(userId) {
              return isOwner(userId) && resource != null;
            }
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Enforces owner-only access to itinerary items within a user's trip.
     * @path /users/{userId}/trips/{tripId}/itinerary_items/{itineraryItemId}
     * @allow (create) User 'cZ0nh1OUjCSw4JAPyqUWCMUqyIA3' can create an itinerary item under their trip.
     * @deny (create) User 'cZ0nh1OUjCSw4JAPyqUWCMUqyIA3' cannot create an itinerary item under another user's trip.
     * @allow (get) User 'cZ0nh1OUjCSw4JAPyqUWCMUqyIA3' can read an itinerary item under their trip.
     * @deny (get) User 'cZ0nh1OUjCSw4JAPyqUWCMUqyIA3' cannot read an itinerary item under another user's trip.
     * @allow (update) User 'cZ0nh1OUjCSw4JAPyqUWCMUqyIA3' can update an itinerary item under their trip.
     * @deny (update) User 'cZ0nh1OUjCSw4JAPyqUWCMUqyIA3' cannot update an itinerary item under another user's trip.
     * @allow (delete) User 'cZ0nh1OUjCSw4JAPyqUWCMUqyIA3' can delete an itinerary item under their trip.
     * @deny (delete) User 'cZ0nh1OUjCSw4JAPyqUWCMUqyIA3' cannot delete an itinerary item under another user's trip.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/trips/{tripId}/itinerary_items/{itineraryItemId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return isSignedIn() && request.auth.uid == userId;
      }
        function isExistingOwner(userId) {
            return isOwner(userId) && resource != null;
          }

      allow create: if isOwner(userId); //  && request.resource.data.tripId == tripId; // Not enforcing tripId == tripId because updates merge existing and new data, leading to false positives
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow update: if isExistingOwner(userId); // && request.resource.data.tripId == resource.data.tripId;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Allows public read access to local business data.
     * @path /local_businesses/{localBusinessId}
     * @allow (get) Any user can read local business data.
     * @allow (list) Any user can list local business data.
     * @deny (create) No user can create local business data (prototype).
     * @deny (update) No user can update local business data (prototype).
     * @deny (delete) No user can delete local business data (prototype).
     * @principle Grants public read access.
     */
    match /local_businesses/{localBusinessId} {
      allow get: if true;
      allow list: if true;
      allow create, update, delete: if false; // No write access in this prototype.
    }

    /**
     * @description Allows public read access to global application statistics.
     * @path /app-stats/{statId}
     * @allow (get) Any user can read application statistics.
     * @allow (list) Any user can list application statistics.
     * @deny (create) No user can create application statistics (prototype).
     * @deny (update) No user can update application statistics (prototype).
     * @deny (delete) No user can delete application statistics (prototype).
     * @principle Grants public read access.
     */
    match /app-stats/{statId} {
      allow get: if true;
      allow list: if true;
      allow create, update, delete: if false; // No write access in this prototype.
    }
    
    /**
     * @description Allows public read access to local supporters profiles.
     * @path /supporters/{supporterId}
     * @allow (get) Any user can read local supporter profiles.
     * @allow (list) Any user can list local supporter profiles.
     * @deny (create) No user can create local supporter profiles (prototype).
     * @deny (update) No user can update local supporter profiles (prototype).
     * @deny (delete) No user can delete local supporter profiles (prototype).
     * @principle Grants public read access.
     */
    match /supporters/{supporterId} {
      allow get: if true;
      allow list: if true;
      allow create, update, delete: if false; // No write access in this prototype.
    }
  }
}